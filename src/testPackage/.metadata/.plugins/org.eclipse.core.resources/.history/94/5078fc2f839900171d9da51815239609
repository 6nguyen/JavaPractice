//	28)
		Scanner scan = new Scanner(System.in);
		System.out.println("Enter positive rows");
		int rows = scan.nextInt();
		
		for(int i = 1; i<=rows; i++){
			for(int j = 1; j<=rows; j++){
				if(j<rows-i-1){
					System.out.print(" ");
				} else{
					System.out.print("*");
				}
			}
			System.out.println();
		}
		
		
