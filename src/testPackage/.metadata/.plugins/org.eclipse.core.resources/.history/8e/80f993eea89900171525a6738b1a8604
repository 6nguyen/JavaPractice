//	32)
		Scanner scan = new Scanner(System.in);
		System.out.println("\t***********************\n"
						 + "\t** Welcome To Craps! **\n"
						 + "\t***********************\n");
		System.out.println("Please enter an intitial bankroll (from 100 to 5000): ");
		int bankroll = scan.nextInt();						// $ amount to enter the game with
		int wager;											// $ amount to wager
		boolean playing = true;								// Loop condition to see if we are still playing
		boolean round = true;								// Loop condition to see if the game round is still going
		boolean point = true;								// Loop condition if player rolls a Point
		int gameRound, craps, losses, naturals, wins;		// integers to hold records of # of rounds, craps, losses, naturals, wins
		gameRound = craps = losses = naturals = wins = 0;	// instantiating all values to 0
		
		while(bankroll < 100 || bankroll > 5000) {			// while bankroll is INvalid
			System.out.println("Yo can you COUNT? I said 100 to 5000.  Try harder.");
			System.out.println("Please enter an intitial bankroll (from 100 to 5000): ");
			bankroll = scan.nextInt();
		}
		
		while(playing){										// bankroll is now VALID, enter the game loop
			System.out.println("\n*********** WAGER **************");
			System.out.println("You currently have $" + bankroll);
			System.out.println("How much would you like to wager? (or 0 to quit): ");
			wager = scan.nextInt();
			
			int reminder = 0;
			while(wager > bankroll || wager <= 0){			// while wager is INvalid
				if (wager > bankroll) {
					System.out.println("You can't wager more than you have, scum!");
				} else if (wager < 0){
					System.out.println("What're you, dense? What the heck is a negative wager?");
				} else {									
					System.out.println("Thank you for playing. You quit.");
					playing = false;			// Manually quit the game, break out of while loop and go to Game Summary
					break;									
				}
				reminder++;
				if (reminder == 3) {						// if user inputs invalid wager 3 times, show them their current bankroll amount
					System.out.println("Listen here, kid. You have $" + bankroll);
					reminder = 0;
				}
				System.out.println("How much would you like to wager? (or 0 to quitt): ");
				wager = scan.nextInt();
				System.out.println("Time to roll the dice.  Good luck!");

			}
			while (round) {								// Wager is VALID, start game round loop
				System.out.println("\n*********** ROUND **************");
				System.out.println("Press Enter to roll the dice...");
				scan.nextLine();

				int dice1 = (int)(Math.random() * 6 + 1);
				int dice2 = (int)(Math.random() * 6 + 1);
				int diceTotal = dice1 + dice2;
				System.out.println("You rolled a " + diceTotal);
				
				// if Natural: 7, 11
				if (diceTotal == 7 || diceTotal == 11) {
					System.out.println("Natural! You win $" + wager);
					bankroll += wager;					// add wager to bankroll and exit Round loop
					round = false;					
				} 
				// if Craps: 2, 3, 12
				else if (diceTotal == 2 || diceTotal == 3 || diceTotal == 12) { 
					System.out.println("Craps! Read em' and weep, loser!  You lose $" + wager);
					bankroll -= wager;					// subtract wager from bankroll and exit Round loop
					round = false;
				} 
				// if Point: everything else
				else {	
					System.out.println("Point!  Now you have to either get a repeat roll to win, or roll a 7 to lose.");
					point = true;						// Set the Point loop condition to enter while loop
					while(point) {
						System.out.println("\n*********** POINT **************");
						System.out.println("Press Enter to roll the dice...");
						scan.nextLine();				// Wait for user to press Enter
						
						int pointRoll = diceTotal;
						dice1 = (int)(Math.random() * 6 + 1);
						dice2 = (int)(Math.random() * 6 + 1);
						diceTotal = dice1 + dice2;
						System.out.println("You rolled a " + diceTotal);
						
						// if Win the Point round, set point = false and exit Point and Round loop
						if (diceTotal == pointRoll) {
							System.out.println("You won the Point! Nice job lad.");
							System.out.println("You won $" + wager);
							bankroll += wager;
							point = round = false;
						}
						// if Lose the point round, set point = false and exit Point and Round loop
						else if (diceTotal == 7) {
							System.out.println("Looks like you lost the Point.");
							System.out.println("You lost $" + wager);
							bankroll -= wager;
							point = round = false;
						}
						// if Nothing happens, continue playing Point Round
						else {
							System.out.println("Nothing. Roll for the Point again...");
						}
					}
				}
			}
				
			
		}
		
		
		
		
		// END OF FILE
	}
}
